program Raz1Zad1;
uses crt;
var a,b:integer;              
begin
clrscr;
write ('Введите 1 число: ');
readln(a);
write ('Введите 2 число: ');
readln(b);
              
{Вывод}
write('            1 число и 2 число'); writeln('   2 число и 1 число');
{--------------------------------------------------------------}
write('Сложение    ');
write(a,'+',b,'=',a+b);
writeln('              ',b,'+',a,'=',b+a);
{--------------------------------------------------------------}
write('Вычитание   ');
write(a,'-',b,'=',a-b);
writeln('             ',b,'-',a,'=',b-a);
{--------------------------------------------------------------}
write('Умножение   ');
write(a,'*',b,'=',a*b);
writeln('             ',b,'*',a,'=',b*a);
{--------------------------------------------------------------}
write('Деление     ');
write(a,'/',b,'=',a/b:0:2);
writeln('           ',b,'/',a,'=',(b/a):0:2);
{--------------------------------------------------------------}
write('/ нацело    ');
write(a,' div ',b,'=',a div b);
writeln('          ',b,' div ',a,'=',b div a);
{--------------------------------------------------------------}
write('Остаток     ');
write(a,' mod ',b,'=',(a mod b));
writeln('          ',b,' mod ',a,'=',b mod a);
{--------------------------------------------------------------}
write('Сравнение > ');
write(a,'>',b,':',a>b);
writeln('           ',b,'>',a,':',b>a);
{--------------------------------------------------------------}
write('Сравнение < ');
write(a,'<',b,':',a<b);
writeln('           ',b,'<',a,':',b<a);
{--------------------------------------------------------------}
write('Сравнение = ');
write(a,'=',b,':',a=b);
writeln('           ',b,'=',a,':',b=a);


readkey;
end.